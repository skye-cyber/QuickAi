{
  "name": "QuickAi",
  "version": "1.2.3",
  "description": "An application to interact with AI assistants for free.",
  "main": "src/main/index.js",
  "homepage": "src/renderer/home.html",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "NODE_ENV=production npx tailwindcss -i ./src/renderer/css/config.css -o ./src/renderer/css/styles.css --minify",
    "watch": "npx tailwindcss -i ./src/renderer/css/config.css -o ./src/renderer/css/styles.css --watch",
    "package": "electron-packager .",
    "forge": "electron-forge package"
  },
  "keywords": [],
  "author": {
    "name": "Wambua Mwikya aka Skye",
    "email": "swskye17@gmail.com"
  },
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "@electron-forge/cli": "^7.6.0",
    "@hpcc-js/wasm-graphviz": "^1.7.0",
    "@mistralai/mistralai": "^1.5.0",
    "assert": "^2.1.0",
    "babel-loader": "^9.2.1",
    "browser": "^0.2.6",
    "browserify-fs": "^1.0.0",
    "browserify-zlib": "^0.2.0",
    "buffer": "^6.0.3",
    "call-bound": "^1.0.3",
    "canvg": "^4.0.2",
    "child-process-promise": "^2.1.3",
    "compression-webpack-plugin": "^11.1.0",
    "copy-webpack-plugin": "^13.0.0",
    "crypto-browserify": "^3.12.1",
    "css-loader": "^7.1.2",
    "cytoscape": "^3.31.2",
    "dompurify": "^3.2.5",
    "dotenv": "^16.4.7",
    "dotenv-expand": "^12.0.1",
    "electron": "^34.1.1",
    "electron-builder": "^25.1.8",
    "file-saver": "^2.0.5",
    "fs": "^0.0.1-security",
    "graphlib": "^2.1.8",
    "graphlib-dot": "^0.6.4",
    "highlight": "^0.2.4",
    "html-to-docx": "^1.8.0",
    "html-to-image": "^1.11.11",
    "html-to-pdf": "^0.1.11",
    "html2canvas": "^1.4.1",
    "https-browserify": "^1.0.0",
    "husky": "^9.1.7",
    "jscharting": "^3.4.0",
    "jspdf": "^3.0.0",
    "katex": "^0.16.22",
    "level": "^9.0.0",
    "levelup": "^5.1.1",
    "lightweight-charts": "^5.0.6",
    "marked": "^15.0.3",
    "mistral": "^0.0.1",
    "os-browserify": "^0.3.0",
    "path-browserify": "^1.0.1",
    "process": "^0.11.10",
    "read-file-relative": "^1.2.0",
    "stream-browserify": "^3.0.0",
    "stream-http": "^3.2.0",
    "style-loader": "^4.0.0",
    "url": "^0.11.4",
    "util": "^0.12.5",
    "vm-browserify": "^1.1.2"
  },
  "dependencies": {
    "@tailwindcss/typography": "^0.5.15",
    "base": "^3.0.0",
    "bl": "^6.0.16",
    "braces": "^3.0.3",
    "dotenv": "^16.4.7",
    "engine-base": "^1.0.0",
    "gulp-util": "^1.0.0",
    "js-yaml": "^4.1.0",
    "jszip": "^3.10.1",
    "keytar": "^7.9.0",
    "map-schema": "^0.3.0",
    "minimatch": "^10.0.1",
    "set-value": "^4.1.0",
    "shelljs": "^0.8.5",
    "update": "^0.7.4",
    "webpack": "^5.97.1"
  },
  "files": [
    "README.md",
    "LICENSE",
    "package.json",
    "src/**/*",
    "public/**/*",
    "!node_modules/"
  ],
  "build": {
    "appId": "com.quickai.app",
    "productName": "QuickAi",
    "electronDownload": {
      "cache": true
    },
    "asar": true,
    "files": [
      "**/*"
    ],
    "asarUnpack": "**/node_modules/keytar/**",
    "extraResources": [
      {
        "from": "src/assets/",
        "to": "assets/"
      },
      {
        "from": "node_modules/keytar",
        "to": "app.asar.unpacked/node_modules/keytar"
      }
    ],
    "mac": {
      "icon": "src/assets/QuickAi.icns",
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist",
      "provisioningProfile": "embedded.provisionprofile"
    },
    "dmg": {
      "artifactName": "${productName}-${version}-${arch}.dmg"
    },
    "win": {
      "icon": "src/assets/QuickAi.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32",
            "arm64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowElevation": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "allowToChangeInstallationDirectory": true,
      "license": "LICENSE"
    },
    "portable": {
      "artifactName": "${productName}-portable-${version}-${arch}.${ext}"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64",
            "armv7l",
            "arm64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "snap"
        }
      ],
      "category": "Utility",
      "icon": "src/assets/QuickAi.png",
      "maintainer": "Skye <swskye17@gmail.com>",
      "synopsis": "QuickAi Desktop",
      "description": "Your AI assistant on all platforms"
    },
    "appImage": {
      "artifactName": "${productName}-${version}-${arch}.AppImage"
    },
    "deb": {
      "priority": "optional",
      "depends": [
        "libappindicator1",
        "libnotify-bin",
        "libsecret-1-dev"
      ],
      "artifactName": "${productName}_${version}_${arch}.deb"
    },
    "snap": {
      "summary": "QuickAi Snap Package",
      "grade": "stable",
      "confinement": "classic",
      "plugs": [
        "network",
        "home",
        "audio-playback"
      ]
    }
  }
}
